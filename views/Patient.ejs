<div id="gradient"></div>
<div id="card">
  <h2>Patient Profile</h2>
  <h1> <%= t.diseases %></h1>
  <p>Name: <%= p.FirstName %> <%= p.LastName %> </p>
  <p>ID: <%= p.id %></a>
  <p>Email: <%= p.email %></a>
  <p> Birthdate: <%= p.Birthdate %></p>
  <span class="left bottom"> tel: <%= p.Phone %></span>
  <span class="right bottom">Gender: <%= p.Gender %></span>
</div>
<br><br><br><br><br><br>
<div class="wrapper1">

  <h1><i>Patient Information</i></h1>     
      <div id="resume">
        <Table>
          <tr><% var test=0;%>
            <th>Diseases</th>
            <th>----------------</th>
            <th>Treatments</th>
          </tr>
 
          <%t.forEach(ttdd=>{ %> 
            <% if(ttdd.id==p.id){ %>
            <tr>
              <%test++%>
              
              <td>( <%= test%> ) <%= ttdd.Diseases %></td>
              <td>----------------</td>
              <td><%= ttdd.Treatment %></td>
          </tr>
            <%}%>
          <%})%>
      </Table>
        </div>
  </div> 
  <br><br><br><br><br><br>

      <div class="wrapper">
        <h1><i>Send Message to </i></h1>
        <form action="/Patient" method="POST">
          <label><h1>Select Doctor</h1></label>
              <select name="doctorid" id="id">
                <%userslist.forEach(user=>{ %> 
                  <% if(user.role == "Doctor"){ %>
              
                    <option value=<%=user.id%> <span><h1><%= user.FirstName %> <%= user.LastName %></h1></span></option>
          <%}%>
          <%})%>
            </select>
            <input placeholder="Subject" type="text" name="Subject" required>
            <div hidden="true">
              <input type="number" name="sender" value= "<%= p.id %>" required>
            </div> 
            <input placeholder="Message" type="text" name="Message" required>
            <button type="submit">Send</button>
        </form>
    </div>

        <div id ="wrapper" >
          <h1 class="heading">Navigate </h1> 
