                          </div>
              
                      </div>
      
               </section>
            </div>

    <div class="wrapper" id="appointment">
        <section>
            
          <div class="w3-container" id="contact" style="margin-top:75px">
      
          <h1><i> Reserver Appointment</i></h1>
          <form action="/Appointment" method="POST">
      
      
            <div class="w3-section">
              <label><h1>Select Doctor</h1></label>
              <select name="doctorid" id="id">
                <%userslist.forEach(user=>{ %> 
                  <% if(user.role == "Doctor"){ %>
               
                    <option value=<%=user.id%> <span><%= user.FirstName %> <%= user.LastName %></span></option>
           <%}%>
           <%})%>
                
               </select>
          </div>

          <div class="wrapper2" hidden="true">
            <input  type="number" name="sender" value= "<%= p.id %>" required>
        </div>
          <table>
            <tr>
              <th><b>Datepicker</b></th>
            </tr>
            <tr>
              <td>Date:</td>
              <td><input type="date" name="datepicked" id="datepicker"></td>
            </tr>
          </table>
              <button type="submit" >reserve appointment</button>
          </form>
      </div>
            
           
        
        </section>
    </div>
    <script>
      $( function() {
          $( "#datepicker" ).datepicker();
      } );
      </script>


<script>
  date = new Date();
  year = date.getFullYear();
  month = date.getMonth() + 1;
  day = date.getDate();
  document.getElementById("current_date").innerHTML = month + "/" + day + "/" + year;
  </script>
          
